@model Stage_plan.Bll.SubscriptionPreferences
@{
    ViewBag.Title = "Subscrition preferences";
}

<div class="mainImage">
    <img src="~/Content/MainSite/Images/Live-Venue.jpg" />
</div>
<section>
    <h1>Subscription preferences</h1>

    @ViewBag.Message

    @using (Html.BeginForm("Contact", "Home"))
            {
        @Html.TextBoxFor(a => a.Name, new { @placeholder = "Name", @class = "name" }) <br />

        @Html.TextBoxFor(a => a.EmailAddress, new { @placeholder = "Email", @class = "email" })<br />

        @Html.RadioButtonFor(a => a.IsOptIn, true) @:Opt In
        @Html.RadioButtonFor(a => a.IsOptIn, false) @:Opt Out
                <div class="center">
                    <input type="submit" value="Submit" />
                </div>
    }
</section>
