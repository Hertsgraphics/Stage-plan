@model Stage_plan.Bll.SubscriptionPreferences
@{
    ViewBag.Title = "Subscrition preferences";
}

<div class="mainImage">
    <img src="~/Content/MainSite/Images/Live-Venue.jpg" />
</div>
<section>
    <h1>Subscription preferences</h1>

    @ViewBag.Message

    @using (Html.BeginForm("Contact", "Home"))
            {
        @Html.TextBoxFor(a => a.Name, new { @placeholder = "Name", @class = "name" }) <br />

        @Html.TextBoxFor(a => a.EmailAddress, new { @placeholder = "Email", @class = "email" })<br /><br />

        <div class="subscriptionOptInOut">

            @Html.RadioButtonFor(a => a.IsOptIn, true) <span>Opt In</span>
        </div>

        <br />

        <div class="subscriptionOptInOut">
            @Html.RadioButtonFor(a => a.IsOptIn, false) <span>Opt Out</span>
            </div>

            <br />

            <div class="center">
                <input type="submit" value="Submit" />
            </div>
            }

            <div class="clearBoth"></div>
</section>
