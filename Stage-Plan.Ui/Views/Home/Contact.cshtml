@model Stage_Plan.Ui.Models.Contact.AbstractContact
@{
    ViewBag.Title = "Contact";
}

<div class="mainImage">
    <img src="~/Content/MainSite/Images/Live-Venue.jpg" />
</div>


//template for telis
@using (Html.BeginForm("Home", "Contact"))
            {
    @Html.TextBoxFor(a => a.Name, new { @placeholder = "", @class = "name" })<br />

                @Html.TextBoxFor(a => a.Email, new { @placeholder = "", @class = "email" })<br />
                
                @Html.TextBoxFor(a => a.Verification, new { @placeholder = "3 + 4?", @class = "verification" })<br />

                @Html.TextAreaFor(a => a.Message, new { @class = "message", placeholder = "" })<br /><br />

                <div class="center">
                    <input type="submit" value="Submit" />
                </div>
}