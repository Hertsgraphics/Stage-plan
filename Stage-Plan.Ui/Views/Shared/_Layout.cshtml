<!DOCTYPE html>
<html>
<head>

    @if (HttpContext.Current.Request.Url.Host.ToLower() != "localhost")

    {
    <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-88937951-1', 'auto');
  ga('send', 'pageview');

    </script>
    }

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/MainSite/Styles")
    @Styles.Render("~/Content/MainSite/Styles/Responsive")



</head>
<body>
    <header>
        <section>
            <div class="logo">
                <img src="~/Content/MainSite/Images/Stage-Plan-Logo.png" />
            </div>

            <nav>
                <ul>
                    <li class="currentLink">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Create stage plan", "Index", "Stageplan")</li>
                    @*<li>@Html.ActionLink("Blog", "Index", "Blog")</li>*@
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    
                </ul>
            </nav>
            <div class="clearBoth"></div>
        </section>
    </header>

    @RenderBody()

    <footer>
        <section>
            <ul>
                <li>@Html.ActionLink("Disclaimer", "Disclaimer", "Home")</li>
                <li>@Html.ActionLink("Privacy policy", "Privacy_Policy", "Home")</li>
            </ul>
        </section>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
