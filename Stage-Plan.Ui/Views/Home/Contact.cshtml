@model Stage_Plan.Ui.Models.Contact.AbstractContact
@{
    ViewBag.Title = "Contact Stage Plan";
}

<div class="mainImage">
    <img src="~/Content/MainSite/Images/Live-Venue.jpg" />
</div>
<section>
    <div class="column-8 clearAndExpandIfSmall">
        <h1>Get in touch</h1>
        @using (Html.BeginForm("Contact", "Home"))
            {
            @Html.TextBoxFor(a => a.Name, new { @placeholder = "Name", @class = "name" }) <br /><br />

            @Html.TextBoxFor(a => a.Email, new { @placeholder = "Email", @class = "email" })<br /><br />

            @*@Html.TextBoxFor(a => a.Verification, new { @placeholder = "3 + 4 = ? Type the answer", @class = "verification" })<br />*@

            @Html.TextAreaFor(a => a.Message, new { @class = "message", placeholder = "Type your message" })<br /><br />

                
                    <input type="submit" value="Submit" />
                
        }
    </div>
    <div class="displayAtTheBottom">
        <img src="~/Content/MainSite/Images/Keyboardist.png" />
    </div>
</section>
 <p>&nbsp;</p>
<div class="clearBoth"></div>
