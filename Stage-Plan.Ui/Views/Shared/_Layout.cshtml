<!DOCTYPE html>
<html>
<head>

 

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Stage-Plan</title>
    @Styles.Render("~/Content/MainSite/Styles")
    @Styles.Render("~/Content/MainSite/Styles/Responsive")

    @RenderSection("head", required: false)
    <meta name="author" content="Stage Plan">

</head>
<body>
        <header>
            <section>
                <div class="logo ">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="~/Content/MainSite/Images/Stage-Plan-Logo.png" alt="Stage Plan Logo" title="Stage Plan logo" />
                    </a>
                </div>

                <div class="showIfSmall showIfMedium hideIfLarge clearAndExpandIfMedium clearAndExpandIfSmall mobMenu" id="menu"></div>

               
                <nav id="mainNav" class="hideIfSmall hideIfMedium">

                        <ul>
                        <li class="currentLink">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Create stage plan", "Index", "Stageplan")</li>
                        <li>@Html.ActionLink("Blog", "Index", "Blog")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Subscribe", "Subscribe", "Home")</li>

                    </ul>


                </nav>
                <div class="socialMedia">

                    <a href="https://plus.google.com/u/0/111958265759320234591" target="_blank">
                        <img src="~/Content/MainSite/Images/google.png" alt="Google+" title="Google +" />
                    </a>

                    <a href="https://www.facebook.com/people/Stageplan-Stageplan/100015404205242" target="_blank">
                        <img src="~/Content/MainSite/Images/facebook.png" alt="Facebook" title="Facebook"/>
                    </a>

     

                </div>
    
                            <div class="clearBoth"></div>
            </section>
        </header>
    

    @RenderBody()

    <footer>
        <section>
            <ul>
                <li>@Html.ActionLink("Disclaimer", "Disclaimer", "Home")</li>
                <li>@Html.ActionLink("Privacy policy", "Privacy_Policy", "Home")</li>
            </ul>
        </section>
    </footer>

    @RenderSection("scripts", required: false)

    @if (!HttpContext.Current.Request.Url.Host.ToLower().Contains("localhost"))
    {
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-98102430-1', 'auto');
            ga('send', 'pageview');

        </script>
    }

    <script src="~/Content/MainSite/Javascript/lmsResponsiveMenu.js"></script>

    <script>
        lmsResponsiveMenu.setUp({ "parentId": "menu", "navId": "mainNav", "responsiveCssClosed": "responsiveCssClosed" });
    </script>

</body>
</html>
